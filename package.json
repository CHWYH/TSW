{
    "name": "@tswjs/tsw",
    "version": "2.0.0",
    "description": "A Node.js infrastructure which is designed for improving the efficiency of locating problems, providing multiple functions for front-end developers",
    "main": "dist/index.js",
    "scripts": {
        "commitlint": "commitlint --color",
        "lint": "tslint -p ./tsconfig.json --fix",
        "test": "nyc mocha -r ts-node/register ./test/**/*.test.ts",
        "posttest": "nyc report --reporter=text > ./coverage-summary",
        "build": "tsc",
        "dev": "tsc --watch"
    },
    "repository": {
        "type": "git",
        "url": "http://git.code.oa.com/tsw/TSW2.git"
    },
    "keywords": [
        "tsw"
    ],
    "engines": {
        "node": ">= 8.0.0"
    },
    "license": "MIT",
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.9.5",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.4",
        "mocha": "^6.0.2",
        "nyc": "^13.3.0",
        "prettier": "^1.16.4",
        "ts-node": "^8.0.2",
        "tslint": "^5.13.0",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.8.0-dev.20191105"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -e .git/COMMIT_EDITMSG",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "nyc": {
        "include": [
            "src/**/*.ts",
            "src/**/*.tsx"
        ],
        "extension": [
            ".ts",
            ".tsx"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
